VITE_SUGGEST_URL=https://quote-form.vercel.app/api/suggest
# If your Vercel deploy is protected, generate a Protection Bypass token in Vercel settings and put it here
# (this will be sent as the x-vercel-protection-bypass header)
VITE_VERCEL_PROTECTION_BYPASS=

# Google Sheets Apps Script endpoint for submissions
VITE_SHEETS_URL=https://script.google.com/macros/s/your-script-id/exec

# Chat safety/limits (optional)
CHAT_MAX_CHARS=1000
CHAT_RATE_WINDOW=1000
CHAT_MAX_REQUESTS=4
# leave empty to allow all languages (comma-separated codes like "en,tr,es")
CHAT_LANGS_WHITELIST=
